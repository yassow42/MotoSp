<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clKonuBasliklari"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/item_backgorund"
    app:cardElevation="@dimen/cardElevation"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleProfileImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/img_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/circleProfileImage"
            app:layout_constraintEnd_toEndOf="@+id/circleProfileImage"
            app:layout_constraintStart_toStartOf="@+id/circleProfileImage"
            app:layout_constraintTop_toTopOf="@+id/circleProfileImage" />

        <TextView
            android:id="@+id/tvKonuBasligi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-black"
            android:maxLines="2"
            android:text="Konu başlığı"
            android:textColor="#4A6CED"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/circleProfileImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/circleProfileImage"
            app:layout_constraintTop_toTopOf="@+id/circleProfileImage" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:maxLines="1"
            android:text="userName"
            android:textColor="@color/siyah"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/circleProfileImage"
            app:layout_constraintTop_toBottomOf="@+id/ortaView" />

        <TextView
            android:id="@+id/tvZaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="Zaman"
            android:textColor="@color/siyah"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvUserName"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

        <TextView
            android:id="@+id/tvCevapSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="Cevaplar:2000"
            android:textAlignment="center"
            android:textColor="@color/siyah"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvZaman"
            app:layout_constraintStart_toEndOf="@+id/tvZaman"
            app:layout_constraintTop_toTopOf="@+id/tvZaman" />

        <View
            android:id="@+id/ortaView"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@color/gri"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleProfileImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



