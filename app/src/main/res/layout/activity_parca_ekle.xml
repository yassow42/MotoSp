<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ParcaEkleActivity">

    <EditText
        android:id="@+id/etParcaİsmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Parcaİsmi"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etParcaModelYili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Parca Model Yılı"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etParcaİsmi"
        app:layout_constraintStart_toStartOf="@+id/etParcaİsmi"
        app:layout_constraintTop_toBottomOf="@+id/etParcaİsmi" />

    <EditText
        android:id="@+id/etParcaUygunlugu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Parca Yorumun"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etParcaModelYili"
        app:layout_constraintStart_toStartOf="@+id/etParcaModelYili"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Parça nerede bulunur ? Fiyat nedir? vs."
        app:layout_constraintEnd_toEndOf="@+id/etParcaModelYili"
        app:layout_constraintStart_toStartOf="@+id/etParcaModelYili"
        app:layout_constraintTop_toBottomOf="@+id/etParcaModelYili" />

</androidx.constraintlayout.widget.ConstraintLayout>