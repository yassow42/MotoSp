<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParcaEkleActivity">

    <EditText
        android:id="@+id/etParcaİsmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Parcaİsmi"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMarka" />

    <EditText
        android:id="@+id/etParcaModelYili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Parca Model Yili"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etParcaİsmi"
        app:layout_constraintStart_toStartOf="@+id/etParcaİsmi"
        app:layout_constraintTop_toBottomOf="@+id/etParcaİsmi" />

    <EditText
        android:id="@+id/etParcaUygunlugu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Parca Uygunlugu"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etParcaModelYili"
        app:layout_constraintStart_toStartOf="@+id/etParcaModelYili"
        app:layout_constraintTop_toBottomOf="@+id/etParcaModelYili" />

    <Button
        android:id="@+id/btnKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Kaydet"
        app:layout_constraintEnd_toEndOf="@+id/etParcaUygunlugu"
        app:layout_constraintStart_toStartOf="@+id/etParcaUygunlugu"
        app:layout_constraintTop_toBottomOf="@+id/etParcaUygunlugu" />

    <TextView
        android:id="@+id/tvMarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Markaa"
        app:layout_constraintEnd_toStartOf="@+id/tvModel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/model"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvMarka"
        app:layout_constraintTop_toTopOf="@+id/tvMarka" />

</androidx.constraintlayout.widget.ConstraintLayout>