<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_model_detay"
    android:padding="5dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">


            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/beyaz"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTanitim2" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/beyaz"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <View
                android:id="@+id/view4"
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:background="@color/beyaz"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/imgYedek"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgYorum"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <View
                android:id="@+id/view6"
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:background="@color/beyaz"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintEnd_toStartOf="@+id/imgYakitTuk"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgYedek"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/tvMarka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#E8EEF2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:transitionName="trans_marka"
                app:layout_constraintEnd_toEndOf="@+id/tvModel"
                app:layout_constraintStart_toStartOf="@+id/tvModel"
                app:layout_constraintTop_toBottomOf="@+id/tvModel" />

            <TextView
                android:id="@+id/tvModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#E8EEF2"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/beyaz"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView" />

            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:fadingEdge="horizontal|vertical"
                android:overScrollMode="ifContentScrolls"
                android:padding="4dp"
                android:scrollbarStyle="insideOverlay"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMarka">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/modelDetayLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgKategori"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_kategori"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/detay_kategori"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="TextView"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgSilindir"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_silindir"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/detay_silindirhacmi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="TextView"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_beygir"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/detay_beygir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="TextView"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_hiz"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/detay_hiz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="TextView"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_tork"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/detay_tork"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="TextView"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_devir"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/detay_devir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="TextView"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_kg" />

                            <TextView
                                android:id="@+id/detay_agirlik"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="TextView"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_yakitkap" />

                            <TextView
                                android:id="@+id/detay_yakitKap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="TextView"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_yakit" />

                            <TextView
                                android:id="@+id/detay_yakitTuk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="12.5 /100km"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/ytTekModelList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                app:color="@color/mavi"
                app:fontSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView"
                app:showFullScreenButton="false"/>

            <TextView
                android:id="@+id/tvTanitim2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/motor_tanitim"
                android:textColor="@color/beyaz"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/ytTekModelList"
                app:layout_constraintStart_toStartOf="@+id/ytTekModelList"
                app:layout_constraintTop_toBottomOf="@+id/ytTekModelList" />

            <ImageView
                android:id="@+id/imgMotorTipi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/ic_scooter"
                app:layout_constraintBottom_toBottomOf="@+id/tvMarka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tvModel"
                app:layout_constraintTop_toTopOf="@+id/tvModel" />

            <ImageView
                android:id="@+id/imgMarka"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/ic_honda"
                app:layout_constraintBottom_toBottomOf="@+id/tvMarka"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvModel" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcYorumlar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvYakitTukEkle" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcParca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvYakitTukEkle" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcYakit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvYakitTukEkle" />

            <ImageView
                android:id="@+id/imgYorum"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_yorum"
                app:layout_constraintBottom_toBottomOf="@+id/imgYedek"
                app:layout_constraintEnd_toStartOf="@+id/view4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgYedek" />

            <ImageView
                android:id="@+id/imgYedek"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_yedekparca"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintEnd_toStartOf="@+id/view6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view4"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/tvParcaEkle"
                style="@style/btn_style"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_profile_button_background"
                android:text="Parça Ekle"
                android:textColor="@color/siyah"
                android:textStyle="normal|bold"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toBottomOf="@+id/tvYorumYap" />

            <ImageView
                android:id="@+id/imgYakitTuk"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_yakit"
                app:layout_constraintBottom_toBottomOf="@+id/imgYedek"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view6"
                app:layout_constraintTop_toTopOf="@+id/imgYedek" />

            <TextView
                android:id="@+id/tvYakitTukEkle"
                style="@style/btn_style"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_profile_button_background"
                android:text="Yakıt Tüketimi Ekle"
                app:layout_constraintEnd_toEndOf="@+id/tvParcaEkle"
                app:layout_constraintStart_toStartOf="@+id/tvParcaEkle"
                app:layout_constraintTop_toBottomOf="@+id/tvParcaEkle" />

            <TextView
                android:id="@+id/tvYorumYap"
                style="@style/btn_style"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_profile_button_background"
                android:text="Yorum Yap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>