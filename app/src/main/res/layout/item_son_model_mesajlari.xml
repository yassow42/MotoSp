<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tumLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/beyaz_bg"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvMarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Marka"
        android:textColor="@color/mavi"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Model"
        android:textColor="@color/mavi"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/tvMarka"
        app:layout_constraintStart_toStartOf="@+id/tvMarka"
        app:layout_constraintTop_toBottomOf="@+id/tvMarka" />

    <TextView
        android:id="@+id/tvSonMesaj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:text="Son Mesaj"
        android:textColor="@color/siyah"
        app:layout_constraintBottom_toBottomOf="@+id/tvModel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvModel"
        app:layout_constraintTop_toTopOf="@+id/tvMarka" />

    <TextView
        android:id="@+id/tvSonYazanTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Son yazan ahmet 23:19"
        android:textColor="@color/siyah"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSonMesaj" />
</androidx.constraintlayout.widget.ConstraintLayout>