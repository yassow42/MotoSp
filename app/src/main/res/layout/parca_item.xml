<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parcaCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/yorumlar_bg">

    <TextView
        android:id="@+id/tvParcaismi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ismi"
        android:textColor="@color/siyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvParcaModelYili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="model yılı"
        android:textColor="@color/siyah"
        app:layout_constraintEnd_toEndOf="@+id/tvParcaismi"
        app:layout_constraintStart_toStartOf="@+id/tvParcaismi"
        app:layout_constraintTop_toBottomOf="@+id/tvParcaismi" />

    <TextView
        android:id="@+id/tvParcaUygunlugu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="uygunluk"
        android:textColor="@color/siyah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvParcaModelYili"
        app:layout_constraintStart_toStartOf="@+id/tvParcaModelYili"
        app:layout_constraintTop_toBottomOf="@+id/tvParcaModelYili" />
</androidx.constraintlayout.widget.ConstraintLayout>